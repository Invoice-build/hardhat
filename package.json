{
  "name": "invoice-build-contracts",
  "version": "0.0.1",
  "description": "Invoice build smart contracts",
  "license": "GPL-3.0-only",
  "private": true,
  "scripts": {
    "dev": "hardhat node",
    "console": "hardhat console",
    "fork": "hardhat node --fork https://mainnet.infura.io/v3/<INFURA_TOKEN>",
    "test": "hardhat test",
    "compile": "hardhat compile",
    "coverage": "hardhat --network hardhat coverage --solcoverjs ./.solcover.js --temp artifacts --testfiles \"./test/**/*.ts\"",
    "lint": "yarn run lint:sol && yarn run lint:js",
    "lint:sol": "solhint --config ./.solhint.json --max-warnings 0 \"contracts/**/*.sol\"",
    "lint:js": "eslint --config ./.eslintrc.js --ignore-path ./.eslintignore --ext .js,.ts .",
    "local:deploy": "yarn compile && hardhat run scripts/deploy.ts",
    "rinkeby:deploy": "yarn compile && hardhat run --network rinkeby scripts/deploy.ts",
    "goerli:deploy": "yarn compile && hardhat run --network goerli scripts/deploy.ts",
    "ropsten:deploy": "yarn compile && hardhat run --network ropsten scripts/deploy.ts",
    "mainnet:deploy": "yarn compile && hardhat run --network mainnet scripts/deploy.ts",
    "xdai:deploy": "yarn compile && hardhat run --network xdai scripts/deploy.ts",
    "accounts": "hardhat accounts",
    "balance": "hardhat balance",
    "send": "hardhat send",
    "blockNumber": "hardhat blockNumber"
  },
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.0.0",
    "@nomiclabs/hardhat-waffle": "^2.0.0",
    "@openzeppelin/contracts": "^3.3.0",
    "@openzeppelin/contracts-upgradeable": "^3.4.0",
    "@openzeppelin/hardhat-upgrades": "^1.6.0",
    "@types/chai": "^4.2.14",
    "@types/mocha": "^8.2.0",
    "@types/node": "^14.14.20",
    "babel-core": "7.0.0-bridge.0",
    "babel-eslint": "^10.1.0",
    "chai": "^4.2.0",
    "chalk": "^4.1.0",
    "dotenv": "^8.2.0",
    "eslint": "^7.2.0",
    "ethereum-waffle": "^3.0.0",
    "ethers": "^5.0.0",
    "hardhat": "^2.0.7",
    "node-watch": "^0.7.1",
    "solhint": "^3.3.2",
    "solidity-coverage": "^0.7.14",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3"
  }
}
